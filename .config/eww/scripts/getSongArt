#!/bin/bash
tmp_dir="$HOME/.cache/eww/spotify"
tmp_cover_path=$tmp_dir/cover.png

if [ ! -d $tmp_dir ]; then
	mkdir -p $tmp_dir
fi

artlink="$(playerctl -p spotify metadata mpris:artUrl | sed -e 's/open.spotify.com/i.scdn.co/g')"

if [ $(playerctl -p spotify metadata mpris:artUrl) ]; then
	curl -s "$artlink" --output $tmp_cover_path
else
	cp $HOME/.config/eww/assets/fallback.png $tmp_cover_path
fi

# Dim image
convert $tmp_cover_path -alpha set -channel A -evaluate multiply 0.3 $tmp_cover_path